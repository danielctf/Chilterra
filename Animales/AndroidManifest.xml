<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cl.a2r.login"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher4"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light" >
        <activity
            android:name="cl.a2r.animales.Login"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="API_KEY" />

        <activity
            android:name="cl.a2r.animales.Aplicaciones"
            android:label="Aplicaciones" >
        </activity>
        <activity
            android:name="cl.a2r.animales.BajaGanado"
            android:label="@string/title_activity_baja_ganado" >
        </activity>
        <activity
            android:name="cl.a2r.custom.Calculadora"
            android:label="@string/title_activity_calculadora" >
        </activity>
        <activity
            android:name="cl.a2r.animales.Logs"
            android:label="@string/title_activity_logs" >
        </activity>
        <activity
            android:name="cl.a2r.animales.BajaGanadoEdicion"
            android:label="@string/title_activity_baja_ganado_edicion" >
        </activity>
        <activity
            android:name="cl.a2r.animales.Partos"
            android:label="@string/title_activity_partos" >
        </activity>
        <activity
            android:name="cl.a2r.animales.Baston"
            android:label="@string/title_activity_baston" >
        </activity>
    </application>

</manifest>
