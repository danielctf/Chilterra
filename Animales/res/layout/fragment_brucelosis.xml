<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layoutCalculadora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvDiio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:paddingLeft="20dp"
            android:text="DIIO:"
            android:textColor="@color/white"
            android:textSize="50sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/llFaltantes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_cow" />

                <TextView
                    android:id="@+id/tvFaltantes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llEncontrados"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/ImageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_search_24" />

                <TextView
                    android:id="@+id/tvEncontrados"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="Lectura TB"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ababab"
        android:textSize="15sp" />

    <Spinner
        android:id="@+id/spinnerTB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/spinner_style" />

    <ImageButton
        android:id="@+id/btnCodBarra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:src="@drawable/codbarra" />

    <TextView
        android:id="@+id/tvCodBarra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageButton
            android:id="@+id/confirmarAnimal"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/circlebutton_state"
            android:src="@drawable/ic_action_done" />
        
        <ImageButton
            android:id="@+id/cerrarMangada"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/circlebutton_lock"
            android:src="@drawable/ic_lock_outline_white_36dp" />   
            
        <TextView
	        android:id="@+id/tvTotalAnimales"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignTop="@+id/tvMangada"
			android:layout_toLeftOf="@+id/dot1"
	        android:text="0"
	        android:textAppearance="?android:attr/textAppearanceLarge"
	        android:textSize="30sp" />
        
        <TextView
	        android:id="@+id/dot1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignTop="@+id/tvMangada"
			android:layout_toLeftOf="@+id/tvMangada"
	        android:text="•"
	        android:textAppearance="?android:attr/textAppearanceLarge" 
	        android:textSize="30sp" />
        
        <TextView
	        android:id="@+id/tvMangada"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_alignParentBottom="true"
			android:layout_marginBottom="30dp"
	        android:text="0"
	        android:textAppearance="?android:attr/textAppearanceLarge"
	        android:textSize="30sp" />
        
        <TextView
	        android:id="@+id/dot2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignTop="@+id/tvMangada"
			android:layout_toRightOf="@+id/tvMangada"
	        android:text="•"
	        android:textAppearance="?android:attr/textAppearanceLarge" 
	        android:textSize="30sp" />
                
        <TextView
	        android:id="@+id/tvAnimalesMangada"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
			android:layout_alignTop="@+id/tvMangada"
			android:layout_toRightOf="@+id/dot2"
	        android:text="0"
	        android:textAppearance="?android:attr/textAppearanceLarge" 
	        android:textSize="30sp" />        

    </RelativeLayout>

</LinearLayout>