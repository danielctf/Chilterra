<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.registroleche.OrdenaLeche" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="214dp"
        android:background="@drawable/blackbkg" >

        <TextView
            android:id="@+id/predio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp"
            android:text="Predio: selectedPredio"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/predio"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="41dp"
            android:text="Fecha: dd-MM-yyyy"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.06"
        android:background="@drawable/blackbkg" >

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:textSize="30sp"
            android:background="@drawable/selected_state"
            android:onClick="generarEntrega"
            android:text="Generar Entrega\n(Leche Buena)" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/button1"
            android:layout_marginTop="58dp"
            android:textSize="30sp"
            android:onClick="generarConsumo"
            android:background="@drawable/selected_state"
            android:text="Generar Consumo\n(Leche Terneros)" />

    </RelativeLayout>

</LinearLayout>