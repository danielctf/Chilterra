<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/samatha" >

    <ImageButton
        android:id="@+id/playButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="730dp"
        android:background="@drawable/playbuttons"
        android:onClick="playSong" />

    <SeekBar
        android:id="@+id/seekBarRelajacion"
        android:layout_width="280dp"
        android:layout_height="35dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="740dp"
        android:maxHeight="3dp"
        android:minHeight="3dp"
        android:progressDrawable="@drawable/scrubber_progress"
        android:thumb="@drawable/scrubber_control" />

    <ImageButton
        android:id="@+id/pauseButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="730dp"
        android:background="@drawable/pausebuttons"
        android:onClick="pauseSong" />

    <ImageButton
        android:id="@+id/stopButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="410dp"
        android:layout_marginTop="730dp"
        android:background="@drawable/stopbuttons"
        android:onClick="stopSong" />

    <Button
        android:id="@+id/min5"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginLeft="57dp"
        android:layout_marginTop="385dp"
        android:onClick="minuto5"
        android:background="@drawable/roundedbutton95" />

    <Button
        android:id="@+id/min15"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginLeft="188dp"
        android:layout_marginTop="385dp"
        android:onClick="minuto15"
        android:background="@drawable/roundedbutton95" />

    <Button
        android:id="@+id/min30"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginLeft="321dp"
        android:layout_marginTop="385dp"
        android:onClick="minuto30"
        android:background="@drawable/roundedbutton95" />

    <TextView
        android:id="@+id/seleccion"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="635dp"
        android:textColor="#80ffffff"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>